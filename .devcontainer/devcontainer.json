{
	"name": "Docker in Docker",
	"image": "ubuntu:24.04",
	"features": {
			"ghcr.io/devcontainers/features/docker-in-docker:2": {
					"version": "latest",
					"enableNonRootDocker": "true",
					"moby": "true"
			}
	},
	"postCreateCommand": "bash /workspaces/example-0-nest/.devcontainer/post-create.sh",
	"remoteUser": "root",
	"runArgs": [
			"-p", "5432:5432",
			"-p", "5433:5433",
			"-p", "4000:4000"
	]
}